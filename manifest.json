{
  "manifest_version": 2,
  "name": "Arabic Word Of The Day",
  "version": "1.0",
  "description": "Gives you a random Arabic word daily",
  "browser_specific_settings": {
    "gecko": {
      "id": "{9994f715-d181-40d5-9219-93cfa785f8c4}"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["arabic_word.js"]
    }
  ]
}
